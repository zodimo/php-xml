{
  "name": "zodimo/xml",
  "description": "Basic types that communicates the possibility of failure and optional values.",
  "type": "library",
  "license": "mit",
  "autoload": {
    "psr-4": {
      "Zodimo\\Xml\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zodimo\\Xml\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jaco Labuschagne",
      "email": "zodimo@gmail.com"
    }
  ],
  "require": {
    "php": "~7.4|~8",
    "zodimo/base-return": "^0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1",
    "friendsofphp/php-cs-fixer": "^3.62",
    "zodimo/base-return-test": "^0",
    "phpbench/phpbench": "^1.2"
  },
  "scripts": {
    "test": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpunit"
    ],
    "profile-test": [
      "Composer\\Config::disableProcessTimeout",
      "php -dxdebug.start_with_request=yes -dxdebug.output_dir=/workspace/xprofiling ./vendor/bin/phpunit"
    ],
    "bench": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpbench run tests/Benchmark/"
    ],
    "bench1": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpbench run"
    ],
    "debug-test": [
      "Composer\\Config::disableProcessTimeout",
      "php -dxdebug.start_with_request=yes ./vendor/bin/phpunit"
    ],
    "cs-fix": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/php-cs-fixer --allow-risky=yes fix "
    ],
    "stan": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpstan analyse"
    ]
  }
}
